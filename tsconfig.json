{
  "compilerOptions": {
    "rootDir": ".",

    "target": "es2019",
    "module": "commonjs",
    "lib": ["dom", "es2017", "es2019"],
    "declaration": true,
    "declarationMap": true,
    // "importHelpers": true,
    // "isolatedModules": true,

    "strict": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["**/tests/**/*", "**/dist/**/*", "**/template/**/*"]
}
